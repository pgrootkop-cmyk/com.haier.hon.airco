{
  "name": {
    "en": "Air Conditioner",
    "nl": "Airconditioner"
  },
  "class": "thermostat",
  "capabilities": [
    "measure_temperature",
    "target_temperature",
    "onoff",
    "thermostat_mode",
    "fan_mode",
    "swing_mode",
    "hon_eco_pilot",
    "hon_silent_mode",
    "hon_rapid_mode",
    "hon_sleep_mode",
    "hon_eco_mode",
    "hon_health_mode",
    "hon_screen_display",
    "hon_echo_mode",
    "measure_temperature.indoor",
    "measure_temperature.outdoor"
  ],
  "capabilitiesOptions": {
    "target_temperature": {
      "min": 10,
      "max": 30,
      "step": 1
    },
    "measure_temperature": {
      "title": {
        "en": "Indoor Temperature",
        "nl": "Binnentemperatuur"
      }
    },
    "measure_temperature.indoor": {
      "title": {
        "en": "Indoor Temperature",
        "nl": "Binnentemperatuur"
      }
    },
    "measure_temperature.outdoor": {
      "title": {
        "en": "Outdoor Temperature",
        "nl": "Buitentemperatuur"
      }
    },
    "thermostat_mode": {
      "values": [
        { "id": "auto", "title": { "en": "Auto", "nl": "Automatisch" } },
        { "id": "cool", "title": { "en": "Cool", "nl": "Koelen" } },
        { "id": "heat", "title": { "en": "Heat", "nl": "Verwarmen" } },
        { "id": "dry", "title": { "en": "Dry", "nl": "Ontvochtigen" } },
        { "id": "fan_only", "title": { "en": "Fan Only", "nl": "Ventilator" } },
        { "id": "10_heating", "title": { "en": "Anti-Freeze (10°C)", "nl": "Vorstbeveiliging (10°C)" } }
      ]
    },
    "fan_mode": {
      "values": [
        { "id": "auto", "title": { "en": "Auto", "nl": "Automatisch" } },
        { "id": "low", "title": { "en": "Low", "nl": "Laag" } },
        { "id": "medium", "title": { "en": "Medium", "nl": "Middel" } },
        { "id": "high", "title": { "en": "High", "nl": "Hoog" } }
      ]
    },
    "swing_mode": {
      "values": [
        { "id": "off", "title": { "en": "Off", "nl": "Uit" } },
        { "id": "vertical", "title": { "en": "Vertical", "nl": "Verticaal" } },
        { "id": "horizontal", "title": { "en": "Horizontal", "nl": "Horizontaal" } },
        { "id": "both", "title": { "en": "Both", "nl": "Beide" } }
      ]
    }
  },
  "energy": {
    "approximation": {
      "usageOn": 1500,
      "usageOff": 5
    }
  },
  "pair": [
    {
      "id": "oauth"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "prev": "oauth",
        "next": "add_devices"
      },
      "options": {
        "title": {
          "en": "Select your Air Conditioner",
          "nl": "Selecteer je Airconditioner"
        }
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "repair": [
    {
      "id": "oauth"
    }
  ],
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Polling",
        "nl": "Polling"
      },
      "children": [
        {
          "id": "poll_interval",
          "type": "number",
          "label": {
            "en": "Poll Interval (seconds)",
            "nl": "Poll-interval (seconden)"
          },
          "hint": {
            "en": "How often to fetch device state from the API (5-3600 seconds)",
            "nl": "Hoe vaak de apparaatstatus wordt opgehaald via de API (5-3600 seconden)"
          },
          "value": 5,
          "min": 5,
          "max": 3600,
          "units": "s"
        }
      ]
    }
  ],
  "platforms": ["local"],
  "connectivity": ["cloud"],
  "images": {
    "small": "/drivers/aircon/assets/images/small.png",
    "large": "/drivers/aircon/assets/images/large.png",
    "xlarge": "/drivers/aircon/assets/images/xlarge.png"
  }
